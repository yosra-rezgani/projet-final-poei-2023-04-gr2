pipeline {
    agent any

    triggers { cron ("* * * * * ")}

    stages {
        stage('Build') {
                    steps {
                          git 'https://github.com/ranyach/projet-final-poei-2023-04-gr2.git'
                    }
                }
        stage('Init') {
            steps {
                echo "Testing AT project"
            }
        }
        stage('Run') {
            steps {
                 bat "mvn test"
            }

        stage('Build') {
            steps {
                  git 'https://github.com/ranyach/projet-final-poei-2023-04-gr2.git'
            }
        }
    }

      post {
        always {
          junit '**/target/surefire-reports/TEST-*.xml''
        }
      }
}
